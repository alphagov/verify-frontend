<% content_for :page_title, t('hub.select_documents.title') %>
<% content_for :feedback_source, 'SELECT_DOCUMENTS_PAGE' %>

<div class="grid-row">
  <div class="column-two-thirds">
    <h1><%= t 'hub.select_documents.heading' %></h1>
    <% if flash[:errors] %>
        <p><%= flash[:errors] %></p>
    <% end %>
    <%= form_for @form, url: '', html: { id: 'validate-documents', novalidate: 'novalidate' } do |f| %>
        <div class="form-group">
          <fieldset>
            <legend><%= t 'hub.select_documents.legend'%></legend>
            <div class="form-group">
              <fieldset class="inline">
                <span>1. <%= t 'hub.select_documents.question.driving_licence'%></span>
                <label class="block-label">
                  <%= f.radio_button :uk_driving_licence, 'true' %>
                  <span>
                    <span class="inner"></span>
                  </span>
                  <%= t 'option.yes' %>
                </label>
                <label class="block-label">
                  <%= f.radio_button :uk_driving_licence, 'false' %>
                  <span>
                    <span class="inner"></span>
                  </span>
                  <%= t 'option.no'%>
                </label>
              </fieldset>
            </div>
            <div class="form-group">
              <fieldset class="inline">
                <span>2. <%= t 'hub.select_documents.question.uk_passport'%></span>
                <label class="block-label">
                  <%= f.radio_button :uk_passport, 'true' %>
                  <span>
                    <span class="inner"></span>
                  </span>
                  <%= t 'option.yes'%>
                </label>
                <label class="block-label" >
                  <%= f.radio_button :uk_passport, 'false' %>
                  <span>
                    <span class="inner"></span>
                  </span>
                  <%= t 'option.no'%>
                </label>
              </fieldset>
            </div>
            <div class="form-group">
              <fieldset class="inline">
                <span>3. <%= t 'hub.select_documents.question.other_document'%></span>
                <label class="block-label" >
                  <%= f.radio_button :foreign_id, 'true' %>
                  <span>
                    <span class="inner"></span>
                  </span>
                  <%= t 'option.yes'%>
                </label>
                <label class="block-label" >
                  <%= f.radio_button :foreign_id, 'false' %>
                  <span>
                    <span class="inner"></span>
                  </span>
                  <%= t 'option.no'%>
                </label>
              </fieldset>
            </div>
            <label class="block-label">
              <%= f.check_box :no_docs, {class: 'js-no-docs'}, 'true' %>
              <span>
                <span class="inner"></span>
              </span>
              <%= t 'hub.select_documents.question.no_docs'%>
            </label>
          </fieldset>
        </div>

        <div id="validation-error-message-js"></div>

        <div class="actions">
          <%= f.submit t('navigation.continue'), class: 'button', id: 'next-button' %>
        </div>
  <% end %>

  </div>
</div>