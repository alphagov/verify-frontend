<%= page_title 'hub.select_documents.title' %>
<% content_for :feedback_source, 'SELECT_DOCUMENTS_PAGE' %>

<div id="no-documents-message" class="visually-hidden" aria-live="assertive" data-no-documents-message="<%= h t('hub.select_documents.no_documents_message') %>"></div>

<div class="grid-row">
  <div class="column-two-thirds">
    <h1 class="heading-large"><%= t 'hub.select_documents.title' %></h1>
    <p><%= t 'hub.select_documents.explanation' %></p>
    <% if flash[:errors] %>
      <div id="validation-error-message-no-js" class="validation-message form-group">
        <p class="error"><%= flash[:errors] %></p>
      </div>
    <% end %>
    <%= form_for @form, url: select_documents_submit_path, html: { id: 'validate-documents', class: 'select-documents-form', novalidate: 'novalidate', 'data-msg': t('hub.select_documents.errors.no_selection')} do |f| %>
        <%= content_tag :div, class: flash[:errors] ? "form-group error" : "form-group" do %>
          <fieldset>
            <legend><%= t 'hub.select_documents.legend'%></legend>
            <div class="form-group">
              <fieldset class="inline">
                <legend class="visually-hidden"><%= t 'hub.select_documents.question.passport'%></legend>
                <span aria-hidden="true"><%= t 'hub.select_documents.question.passport'%></span>
                <%= f.custom_radio_button :passport, true, t('hub.select_documents.documents_option_yes') %>
                <%= f.custom_radio_button :passport, false, t('option.no') %>
              </fieldset>
            </div>
            <div class="form-group">
              <fieldset class="inline">
                <legend class="visually-hidden"><%= t 'hub.select_documents.question.driving_licence'%></legend>
                <span aria-hidden="true"><%= t 'hub.select_documents.question.driving_licence'%></span>
                <%= f.custom_radio_button :driving_licence, true, t('hub.select_documents.documents_option_yes') %>
                <%= f.custom_radio_button :driving_licence, false, t('option.no') %>
              </fieldset>
            </div>
            <div class="form-group">
              <fieldset class="inline">
                <legend class="visually-hidden"><%= t 'hub.select_documents.question.ni_driving_licence'%></legend>
                <span aria-hidden="true"><%= t 'hub.select_documents.question.ni_driving_licence'%></span>
                <%= f.custom_radio_button :ni_driving_licence, true, t('hub.select_documents.documents_option_yes') %>
                <%= f.custom_radio_button :ni_driving_licence, false, t('option.no') %>
              </fieldset>
            </div>
            <div class="form-group">
              <fieldset class="inline">
                <legend class="visually-hidden"><%= t 'hub.select_documents.question.non_uk_id_document'%></legend>
                <span aria-hidden="true"><%= t 'hub.select_documents.question.non_uk_id_document'%></span>
                <%= f.custom_radio_button :non_uk_id_document, true, t('hub.select_documents.documents_option_yes') %>
                <%= f.custom_radio_button :non_uk_id_document, false, t('option.no') %>
              </fieldset>
            </div>

            <% if @alternative_name == 'select_documents_new_questions_no_profile_change' %>
              <div class="form-group">
                <fieldset class="inline">
                  <legend class="visually-hidden"><%= t 'hub.select_documents.question.uk_bank_account_details'%></legend>
                  <span aria-hidden="true"><%= t 'hub.select_documents.question.uk_bank_account_details'%></span>
                  <%= f.custom_radio_button :non_uk_id_document, true, t('hub.select_documents.documents_option_yes') %>
                  <%= f.custom_radio_button :non_uk_id_document, false, t('option.no') %>
                </fieldset>
              </div>
              <div class="form-group">
                <fieldset class="inline">
                  <legend class="visually-hidden"><%= t 'hub.select_documents.question.debit_card'%></legend>
                  <span aria-hidden="true"><%= t 'hub.select_documents.question.debit_card'%></span>
                  <%= f.custom_radio_button :non_uk_id_document, true, t('hub.select_documents.documents_option_yes') %>
                  <%= f.custom_radio_button :non_uk_id_document, false, t('option.no') %>
                </fieldset>
              </div>
              <div class="form-group">
                <fieldset class="inline">
                  <legend class="visually-hidden"><%= t 'hub.select_documents.question.credit_card'%></legend>
                  <span aria-hidden="true"><%= t 'hub.select_documents.question.credit_card'%></span>
                  <%= f.custom_radio_button :non_uk_id_document, true, t('hub.select_documents.documents_option_yes') %>
                  <%= f.custom_radio_button :non_uk_id_document, false, t('option.no') %>
                </fieldset>
              </div>
            <% else %>
              <%= f.custom_check_box :no_documents, {class: 'js-no-docs'}, true, false, t('hub.select_documents.question.no_documents') %>
            <% end %>

          </fieldset>
        <% end %>

        <div id="validation-error-message-js"></div>

        <div class="actions">
          <%= f.submit t('navigation.continue'), class: 'button', id: 'next-button' %>
        </div>
    <% end %>

  </div>
</div>
