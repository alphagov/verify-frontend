<%= page_title 'hub.about_certified_companies.title' %>
<% content_for :feedback_source, 'ABOUT_CERTIFIED_COMPANIES_PAGE' %>

<p><%= t 'hub.about_certified_companies.a_certified_company_will_verify' %></p>

<ul class="list-companies">
  <% @identity_providers.each do |idp| %>
      <li>
        <%= image_tag idp.white_logo_path, alt: idp_tagline(idp) %>
      </li>
  <% end %>
</ul>

<p><%= t 'hub.about_certified_companies.no_charge' %></p>

<div class="actions">
  <%= button_link_to t('navigation.next'), about_identity_accounts_path, id: 'next-button' %>
</div>

<details>
  <summary>
    <span class="summary"><%= t 'hub.about_certified_companies.summary' %></span>
  </summary>
  <div class="panel panel-border-narrow">
    <p><%= t 'hub.about_certified_companies.details.p1' %></p>
    <p><%= t 'hub.about_certified_companies.details.p2' %></p>
    <p><%= t 'hub.about_certified_companies.details.p3' %></p>
    <p><%= t 'hub.about_certified_companies.details.p4' %></p>
  </div>
</details>
