<% content_for :main do %>
  <div class="content-inner slides">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-one-third">
        <div class="slides-verify-logo hide-mobile">
          <%= image_tag 'govuk-verify.png', srcset: "#{asset_path 'govuk-verify.svg'} 1x", alt: ' ', role: 'presentation' %>
        </div>
        <div class="slides-verify-logo show-mobile">
          <%= image_tag 'govuk-verify-horizontal.png', srcset: "#{asset_path 'govuk-verify-horizontal.svg'} 1x", alt: ' ', role: 'presentation' %>
        </div>
      </div>
      <div class="govuk-grid-column-two-thirds">
        <%= yield %>
      </div>
    </div>
  </div>
<% end %>
<%= render file: 'layouts/application' %>
