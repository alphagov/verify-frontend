<%= page_title 'hub.failed_registration.heading', idp_name: @idp.display_name %>
<% content_for :feedback_source, 'FAILED_REGISTRATION_PAGE' %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    <h1 class="govuk-heading-l"><%= raw @transaction.custom_fail_heading %></h1>

    <p class="govuk-body"><%= raw(@transaction.custom_fail_what_next_content % { idp_name: @idp.display_name }) %></p>

    <h2 class="govuk-heading-m">
      <%= raw @transaction.custom_fail_other_options %>
    </h2>

    <h2 class="govuk-heading-m"><%= raw @transaction.custom_fail_try_another_summary %></h2>
    <div class="govuk-body">
      <%= raw(@transaction.custom_fail_try_another_text % { idp_name: @idp.display_name }) %>
      <%= link_to t('hub.failed_registration.start_again'), choose_a_certified_company_path %>
    </div>

    <h2 class="govuk-heading-m"><%= raw(@transaction.custom_fail_contact_details_intro % { idp_name: @idp.display_name }) %></h2>
    <div class="govuk-body">
      <%= raw @idp.contact_details %>
    </div>
  </div>
</div>
