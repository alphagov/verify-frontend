  <% identity_providers.each do |identity_provider| %>
      <div class="column-one-third">
        <div class="company">
          <div class="company-inner">
            <div class="company-logo">
              <div class="company-logo-inner">
                <%= image_tag identity_provider.logo_path, alt: idp_tagline(identity_provider) %>
              </div>
            </div>
            <%= form_tag(sign_in_path, {class: 'idp-option js-idp-form'}) do %>
                <% button_text = local_assigns.fetch(:non_repudiation, false) ? 'hub.signin.sign_in_idp' : 'hub.signin.select_idp' %>
                <%= button_tag t(button_text, name: identity_provider.display_name),
                               class: "button",
                               name: identity_provider.entity_id,
                               type: "submit",
                               value: identity_provider.display_name
                %>
                <%= hidden_field_tag 'selected-idp-entity-id', identity_provider.entity_id %>
                <%= hidden_field_tag 'selected-idp-display-name', identity_provider.display_name %>
            <% end %>
          </div>
        </div>
      </div>
  <% end %>
