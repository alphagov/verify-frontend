<%= page_title 'hub.choose_a_certified_company.heading' %>
<% content_for :feedback_source, 'CHOOSE_A_CERTIFIED_COMPANY_PAGE' %>
<% content_for :additional_javascript do %>
  <%= javascript_include_tag 'piwik_idp_picker_tracking' %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-l"><%= t 'hub.choose_a_certified_company.heading' %></h1>
      <p><%= t 'hub.choose_a_certified_company.intro' %></p>
      <p>
        <%= t 'hub.choose_a_certified_company.idp_count' %>
        <%= t 'hub.choose_a_certified_company.idp_explanation' %>
      </p>
      <%= t 'hub.choose_a_certified_company.content_html' %>
    </div>
  </div>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
      <div id="recommended-idps">
        <div class="js-continue-to-idp" data-location="<%= url_for(controller: 'choose_a_certified_company', action: 'select_idp_ajax', locale: I18n.locale) %>">
          <% @idps.each.with_index do |identity_provider, index| %>
            <%= render partial: 'choose_a_certified_company/idp_option', locals: { identity_provider: identity_provider, order: index + 1 } %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <%= render partial: 'shared/continue_to_idp_form' %>
  <%= javascript_include_tag 'piwik_idp_picker_tracking' %>
</div>
